<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0" name="viewport">
    <meta name="author" content="Riccardo Sangiorgio">

    <title>Archivio digitale - ITIS Enrico Fermi</title>

    <!-- favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/images/shortcut/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/images/shortcut/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/images/shortcut/favicon-16x16.png">
    <link rel="manifest" href="/images/shortcut/manifest.json">
    <link rel="mask-icon" href="/images/shortcut/safari-pinned-tab.svg" color="#1a8d4c">
    <link rel="shortcut icon" href="/images/shortcut/favicon.ico">
    <meta name="msapplication-config" content="/images/shortcut/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    <!-- local CSS -->
    <link rel="stylesheet" href="css/mainSignUp.css">

    <!-- remote CSS -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:300,400,700' rel='stylesheet' type='text/css'>

    <!-- remote JS -->
    <!-- remote JS -->
    <script src="https://use.fontawesome.com/c44dd2f1bd.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <main class="main" id="signupApp">
      <div class="signup-box module" v-if="signedUp === false">
        <!-- Nome, Cognome, Email, Password, Materie -->
        <div class="row">
          <div class="col-1-of-1">
            <img src="../images/logo/itisFermi.svg" class="logo">
          </div>
        </div>
        <div class="row">
          <div class="col-1-of-1">
            <input type="text" class="module-input-text" placeholder="Nome" autocomplete="off" ref="signupFirstame" @keyup.enter="signup">
          </div>
        </div>
        <div class="row">
          <div class="col-1-of-1">
            <input type="text" class="module-input-text" placeholder="Cognome" autocomplete="off" ref="signupLastname" @keyup.enter="signup">
          </div>
        </div>
        <div class="row">
          <div class="col-1-of-1">
            <input type="email" class="module-input-text" placeholder="Email" autocomplete="off" ref="signupEmail" @keyup.enter="signup">
          </div>
        </div>
        <div class="row">
          <div class="col-1-of-1">
            <input type="password" class="module-input-text" placeholder="Password" autocomplete="off" ref="signupPassword" @keyup.enter="signup">
          </div>
        </div>
        <div class="row">
            <div class="col-1-of-1">
              <button class="module-button module-button--green" @click="signup">Registrati</button>
            </div>
        </div>
        <div class="row" v-if="error">
          <div class="col-1-of-1">
            <p class="error">\{{errorMessage}}</p>
          </div>
        </div>
      </div>

      <div class="success-box module" v-else>
        <div class="row">
          <div class="col-1-of-1">
            <img src="../images/logo/itisFermi.svg" class="logo">
          </div>
        </div>
        <div class="row">
          <div class="col-1-of-1">
            <p>Registrato con successo!</p>
          </div>
        </div>
      </div>
      {{>footer}}
    </main>
    <script src="../js/views/signup/functions.js" type="text/javascript"></script>
    <script src="../js/views/signup/script.js" type="text/javascript"></script>
  </body>
</html>
