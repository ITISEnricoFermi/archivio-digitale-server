<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,maximum-scale=1.0" name="viewport">
    <meta name="author" content="Riccardo Sangiorgio">

    <title>Archivio digitale - ITIS Enrico Fermi</title>

    <!-- local CSS -->
    <link rel="shortcut icon" type="image/x-icon" href="../images/shortcut.png">
    <link rel="stylesheet" href="../css/mainSignUp.css">

    <!-- remote CSS -->
    <link href='https://fonts.googleapis.com/css?family=Roboto:300,400,700' rel='stylesheet' type='text/css'>

    <!-- remote JS -->
    <!-- remote JS -->
    <script src="https://use.fontawesome.com/c44dd2f1bd.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/vue/2.5.13/vue.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <main class="main">
      <div class="signup-box">
        <!-- Nome, Cognome, Email, Password, Materie -->
        <div class="row">
          <div class="col-1-of-1">
            <input type="text" class="module-input-text" placeholder="Nome" autocomplete="off">
          </div>
        </div>
        <div class="row">
          <div class="col-1-of-1">
            <input type="text" class="module-input-text" placeholder="Cognome" autocomplete="off">
          </div>
        </div>
        <div class="row">
          <div class="col-1-of-1">
            <input type="email" class="module-input-text" placeholder="Email" autocomplete="off">
          </div>
        </div>
        <div class="row">
          <div class="col-1-of-1">
            <input type="password" class="module-input-text" placeholder="Password" autocomplete="off">
          </div>
        </div>

        <div class="row">
            <div class="col-1-of-1">
              <button class="module-button module-button--green">Registrati</button>
            </div>
        </div>

      </div>
    </main>
    <script src="../js/views/signup/functions.js" type="text/javascript"></script>
    <script src="../js/views/signup/script.js" type="text/javascript"></script>
  </body>
</html>
